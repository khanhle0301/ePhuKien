@model List<MyShop.Models.RecentProductItem>

<div class="widget-last-view">
    @if (Model.Count() > 0)
    {
        foreach (var product in Model.OrderByDescending(x => x.CreateDate).Take(3))
        {
            var url = "/san-pham/" + product.Product.ProductCategory.Alias + "/" + product.Product.Alias + "-" + product.Product.ID + ".html";
            <div class="spost clearfix">
                <div class="entry-image">
                    <a href="@url"><img src="@product.Product.Image" alt="@product.Product.Name"></a>
                </div>
                <div class="entry-c">
                    <div class="entry-title">
                        <h4><a href="@url">@product.Product.Name</a></h4>
                    </div>
                    <ul class="entry-meta">
                        <li class="color">
                            @if (product.Product.PromotionPrice.HasValue)
                            {
                                <ins> @product.Product.PromotionPrice.Value.ToString("N0")₫</ins>
                                <del> @product.Product.Price.ToString("N0")₫</del>
                            }
                            else
                            {
                                <ins> @product.Product.Price.ToString("N0")₫</ins>
                            }                           
                        </li>
                    </ul>
                </div>
            </div>
        }
    }
</div>