
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section left_menu{
    <div class="panel-group left_menu col-md-3 hidden-xs hidden-sm" id='left_menu'>
        <div class="panel-heading">
            <h4 class="panel-title">
                <i class='icon-line-menu'></i> Menu
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse in">
            <div class="panel-body">
                @{Html.RenderAction("Category", "Home");}
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('.left_menu').addClass('left_menu_sticker');
        });
    </script>
    <script>
        $(window).load(function () {
            $('.left_menu').addClass('left_menu_sticker');
        });
    </script>
}

@section title{
    <section id="page-title">
        <div class="container clearfix">

            <h1 class='col-md-6 col-sm-6'>Tài khoản</h1><br />
            <div class='clear'></div>

            <span class='col-sm-6 text-center'>Đăng nhập / Đăng ký</span>


            <ol class="breadcrumb col-md-6 col-sm-6 hidden-xs">
                <li><a href="/">Trang chủ</a></li>

                <li><a href="/tai-khoan.html">Tài khoản</a></li>

                <li class='active'>Đăng nhâp - Đăng ký</li>
            </ol>
        </div>
    </section>
}
@section footerJS{

    <script src="~/Assets/client/js/login.js"></script>
}


<div class="content-wrap">
    <input type="hidden" id="urlredirect" value="@ViewBag.UrlRedirect" />
    <div class="container clearfix">
        <div class="accordion accordion-lg divcenter nobottommargin clearfix" style="max-width: 550px;">
            <!-- login -->
            <div id='login'>
                <div class="acctitle"><i class="acc-closed icon-lock3"></i><i class="acc-open icon-unlock"></i>Đăng nhập</div>
                <div class="acc_content clearfix">
                    <form accept-charset='UTF-8' id='customer_login' method='post'>
                        <div class="errors" id="loginResult" style="display: none;">
                            <ul>
                                <li>Thông tin đăng nhập không hợp lệ.</li>
                            </ul>
                        </div>
                        <div class="col_full">
                            <label for="login-form-username">Tài khoản:</label>
                            <input id="login-form-username" name="userName" value="" class="form-control" />
                        </div>
                        <div class="col_full">
                            <label for="login-form-password">Mật khẩu:</label>
                            <input type="password" id="login-form-password" name="password" value="" class="form-control" />
                        </div>
                        <div class="col_full nobottommargin">
                            <button class="button button-3d button-black nomargin" id="login-form-submit" name="login-form-submit" type='submit' value="login">Đăng nhập</button>
                            <a href="#" onclick="showRecoverPasswordForm();return false;" class="fright">Quên mật khẩu?</a>
                        </div>
                        <!--</form>-->
                    </form>
                </div>
            </div>
            <!-- end login -->
            <!-- register -->
            <div id='register'>
                <div class="acctitle"><i class="acc-closed icon-user4"></i><i class="acc-open icon-ok-sign"></i>Người dùng mới? Đăng ký tài khoản</div>
                <div class="acc_content clearfix">
                    <form accept-charset='UTF-8' id='create_customer' method='post'>
                        <input name='form_type' type='hidden' value='create_customer'>
                        <div class="errors" id="registerResult" style="display: none;">
                            <ul>
                                <li id="existsResult"></li>
                            </ul>
                        </div>
                        <div class="col_full">
                            <label for="first_name">Họ tên:<span class="required require_symbol">*</span></label>
                            <input required type="text" id="name" name="name" value="" class="form-control" />
                        </div>                      
                        <div class="col_full">
                            <label for="register-form-email">Email:<span class="required require_symbol">*</span></label>
                            <input required type="text" id="register-form-email" name="email" value="" class="form-control" />
                        </div>
                        <div class="col_full">
                            <label for="register-form-name">Địa chỉ:<span class="required require_symbol">*</span></label>
                            <input required type="text" id="register-form-address" name="address" value="" class="form-control" />
                        </div>
                        <div class="col_full">
                            <label for="register-form-name">Điện thoại:<span class="required require_symbol">*</span></label>
                            <input required type="text" id="register-form-phone" name="phone" value="" class="form-control" />
                        </div>
                        <div class="col_full">
                            <label for="register-form-name">Tài khoản:<span class="required require_symbol">*</span></label>
                            <input required type="text" id="register-form-userName" name="userName" value="" class="form-control" />
                        </div>
                        <div class="col_full">
                            <label for="register-form-password">Mật khẩu:<span class="required require_symbol">*</span></label>
                            <input required type="password" id="register-form-password" name="password" value="" class="form-control" />
                        </div>
                        <div class="col_full">
                            <label for="register-form-repassword">Nhập lại mật khẩu:<span class="required require_symbol">*</span></label>
                            <input required type="password" id="register-form-repassword" name="repassword" value="" class="form-control" />
                        </div>

                        <div class="col_full nobottommargin">
                            <button class="button button-3d button-black nomargin" id="register-form-submit" name="register-form-submit" type='submit'>Đăng ký</button>
                        </div>
                    </form>
                    <!--</form>-->
                </div>
            </div>
            <!-- end register -->
            <!-- forgot password -->
            <div id="recover-password" style="display:none;" class="userbox">
                <div class="acctitle"><i class="icon-refresh"></i>Quên mật khẩu</div>
                <div class="">
                    <form accept-charset="UTF-8" id="recover-form-password" class="form-horizontal form-without-legend nobottommargin" method="post" _lpchecked="1" role="form">
                        <input name="form_type" type="hidden" value="recover_customer_password">

                        <div class="col_full">
                            <label for="recover-email">Email:</label>
                            <input type="text" id="recover-email" name="email" value="" class="form-control" />
                        </div>
                        <div class="col_full nobottommargin">
                            <button class="button button-3d button-black nomargin" id="recover-password-submit" type="submit">Gửi</button>
                            <button class="button button-3d button-red nomargin" onclick="hideRecoverPasswordForm(); return false;" name="">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- end forgot password -->
        </div>
        <script type="text/javascript">
            function showRecoverPasswordForm() {
                document.getElementById('recover-password').style.display = 'block';
                document.getElementById('login').style.display = 'none';
                document.getElementById('register').style.display = 'none';
            }

            function hideRecoverPasswordForm() {
                document.getElementById('recover-password').style.display = 'none';
                document.getElementById('login').style.display = 'block';
                document.getElementById('register').style.display = 'block';
            }
            if (window.location.hash == '#recover') { showRecoverPasswordForm() }
        </script>

    </div>
</div>
